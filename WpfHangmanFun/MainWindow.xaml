<Window x:Class="HangmanFunWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HangmanFunWPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Hangman By Eddie"
        Width="859"
        Height="630.5"
        mc:Ignorable="d">

  <Grid Name="gridMain">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="34*" />
      <ColumnDefinition Width="132*" />
      <ColumnDefinition Width="132*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
      <ColumnDefinition Width="32*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
      <RowDefinition Height="32*" />
    </Grid.RowDefinitions>

    <Image Name="personImage"
           Grid.Row="0"
           Grid.RowSpan="5"
           Grid.Column="1"
           Grid.ColumnSpan="2"
           Source="/Images/image_1.png" />

    <Viewbox Grid.Row="5"
             Grid.RowSpan="2"
             Grid.Column="1"
             Grid.ColumnSpan="2"
             VerticalAlignment="Top"
             Stretch="Uniform">
      <TextBlock Name="secretWord"
                 FontSize="52"
                 Text=""
                 TextAlignment="Center"
                 Typography.Capitals="AllSmallCaps"
                 Typography.Kerning="True" />
    </Viewbox>

    <TextBlock Name="numberWins"
               Grid.Row="7"
               Grid.Column="3"
               Grid.ColumnSpan="4"
               Padding="8 0 0 0"
               VerticalAlignment="Top"
               FontSize="18"
               Text="Total Wins: 0" />

    <TextBlock Name="numberLosses"
               Grid.Row="7"
               Grid.Column="3"
               Grid.ColumnSpan="4"
               Padding="8 0 0 0"
               VerticalAlignment="Bottom"
               FontSize="18"
               Text="Total Losses: 0" />

    <Button Name="buttonNewGame"
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="16 8 16 8"
            Click="StartNewGame"
            Content="New Game"
            FontSize="18" />

    <Button Name="buttonExit"
            Grid.Row="7"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Margin="16 8 16 8"
            Click="ExitGame"
            Content="Exit"
            FontSize="18" />

    <Button Name="buttonA"
            Grid.Row="1"
            Grid.Column="3"
            Margin="8"
            Click="LetterSelected"
            Content="A"
            FontSize="18"
            IsEnabled="False" />

    <Button Name="buttonB"
            Grid.Row="1"
            Grid.Column="4"
            Margin="8"
